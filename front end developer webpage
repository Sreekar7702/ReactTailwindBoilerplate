<body>
<div class="container">
  <h1>What brings you to perform?</h1>
  <p>Select the option:</p>
  <div class="options">
    <div class="box" onclick="selectOption(1)" id="option1">
      <p>I'm a designer looking to share my work</p>
    </div>
    <div class="box" onclick="selectOption(2)" id="option2">
      <p>I'm looking to hire a designer</p>
    </div>
    <div class="box" onclick="selectOption(3)" id="option3">
      <p>I'm looking for designer inspirations</p>
    </div>
  </div>
  <button id="finishButton" style="display: ;">Finish</button>
</div>

<script>
  function selectOption(option) {
    var finishButton = document.getElementById('finishButton');
    finishButton.style.display = 'block';
    
    // Remove bold from all options
    var boxes = document.querySelectorAll('.box');
    boxes.forEach(function(box) {
      box.classList.remove('selected');
    });
    
    // Add bold to selected option
    var selectedBox = document.getElementById('option' + option);
    selectedBox.classList.add('selected');
    
    finishButton.addEventListener('click', function() {
      window.location.href = 'page4.html'; // Redirect to Page 4
    });
  }
</script>

</body>
</html>








